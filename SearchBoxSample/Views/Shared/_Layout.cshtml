<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/bootstrap.min.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/bootstrapmvc.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/modernizr-1.7.min.js")" type="text/javascript"></script>
</head>
<body>
    <div class="navbar navbar-fixed-top">
        <div class="navbar-inner">
            <div class="container">
                <a href="/" class="brand">SearchBox.io .NET Sample</a>
                <div class="nav-collapse">
                    <ul class="nav">
                        <li>@Html.ActionLink("Home", "Index", "Home")</li>
                        <li>@Html.ActionLink("About", "About", "Home")</li>
                        <li>@Html.ActionLink("Manage Documents", "Index", "DocumentManagement")</li>
                    </ul>
                    <ul class="nav pull-right">
                        <li class="divider-vertical"></li>
                        <form action="/Document/Search" method="get" class="navbar-search pull-left">
                            <input type="text" placeholder="Search" class="search-query span2" name="q">
                        </form>
                    </ul>
                </div>
                <!-- /.nav-collapse -->
            </div>
        </div>
        <!-- /navbar-inner -->
    </div>
    <div class="container">
        @RenderBody()
        <hr/>
        <footer class="footer">
            <p>SearchBox.io</p>
            <p>Built with <a target="_blank" href="http://twitter.github.com/bootstrap/">Bootstrap</a></p>
        </footer>
    </div>
    <!-- /container -->
</body>
</html>
